---
const { current = "/" } = Astro.props;
---

<header>
  <style>
   header {
  background: linear-gradient(135deg, #ff7e5f 0%, #feb47b 100%); /* orange → pêche */
  padding: 0;
  margin-bottom: 2rem;
  box-shadow: 0 4px 16px rgba(0,0,0,0.15);
  position: relative;
  z-index: 2;
  overflow: hidden;
}

header::after {
  content: "";
  position: absolute;
  top: -30%;
  left: -20%;
  width: 140%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
  transform: rotate(-15deg);
  pointer-events: none;
}

.nav-content {
  max-width: 1100px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.9rem 2rem;
}

.brand {
  color: #fff;
  font-size: 1.6rem;
  font-weight: bold;
  letter-spacing: 3px;
  text-shadow: 0 2px 12px rgba(0,0,0,0.25);
  font-family: 'Segoe UI', Arial, sans-serif;
}

nav ul {
  display: flex;
  gap: 2rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

nav a {
  color: #fff;
  text-decoration: none;
  font-weight: 600;
  font-size: 1.05rem;
  padding: 0.4rem 1rem;
  border-radius: 999px; /* on garde les liens arrondis */
  transition: background 0.25s ease, color 0.25s ease, transform 0.2s;
}

nav a:hover,
nav a.active {
  background: rgba(255,255,255,0.2);
  color: #ffd54f; /* doré doux */
  transform: translateY(-2px);
}

@media (max-width: 700px) {
  .nav-content {
    flex-direction: column;
    align-items: stretch;
    padding: 1rem;
  }
  nav ul {
    flex-direction: column;
    gap: 1rem;
    align-items: flex-end;
  }
}
  </style>
  <div class="nav-content">
    <nav class="nav_center">
      <ul>
        <li><a href="/" class={current === "/" ? "active" : ""}>Penguins</a></li>
        <li><a href="/linearregression" class={current === "/linearregression" ? "active" : ""}>Linear regression</a></li>
      </ul>
    </nav>
  </div>
</header>